<xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output method="text"/>
  <xsl:template match="DATA">
    <html>
      <head>
        <title>ABAP Blame</title>
        <link href="abaptimemachine.css" rel="stylesheet" type="text/css"/>
      </head>
      <body>
        <div class="header">
          <h1>
            <xsl:choose>
              <xsl:when test="TYPE = 'CLAS'">Class</xsl:when>
              <xsl:when test="TYPE = 'PROG'">Program</xsl:when>
              <xsl:when test="TYPE = 'FUGR'">Function group</xsl:when>
              <xsl:when test="TYPE = 'FUNC'">Function module</xsl:when>
            </xsl:choose>
            <xsl:text> </xsl:text>
            <xsl:value-of select="NAME"/>
          </h1>
          <div>&amp;nbsp;</div>
          <div class="header_text">
            <xsl:value-of select="HEADER_TEXT"/>
          </div>
          <div>&amp;nbsp;</div>
        </div>
        <div class="metadata">
          <form action="SAPEVENT:timestamp" method="get">
            <label for="timestamps">Moment: </label>
            <select id="timestamp" name="timestamp" onchange="this.form.submit();">
              <xsl:for-each select="TIMESTAMPS/TIMESTAMP">
                <option>
                  <xsl:attribute name="value">
                    <xsl:value-of select="."/>
                  </xsl:attribute>
                  <xsl:if test=". = ../../TIMESTAMP">
                    <xsl:attribute name="selected">selected</xsl:attribute>
                  </xsl:if>
                  <xsl:value-of select="substring(.,1,4)"/>
                  -
                  <xsl:value-of select="substring(.,5,2)"/>
                  -
                  <xsl:value-of select="substring(.,7,2)"/>

                &amp;nbsp;

                  <xsl:value-of select="substring(.,9,2)"/>
                  :
                  <xsl:value-of select="substring(.,11,2)"/>
                  :
                  <xsl:value-of select="substring(.,13,2)"/>
                </option>
              </xsl:for-each>
            </select>
          </form>
          <!--
          <form action="SAPEVENT:revert" method="get">
            <button name="revert">
              <xsl:attribute name="value">
                <xsl:value-of select="TIMESTAMP"/>
              </xsl:attribute>
              Revert code
            </button>
          </form>
          -->
          <br/>
          <div>Ignore case:

            <xsl:choose>
              <xsl:when test="IGNORE_CASE = 'X'">Yes</xsl:when>
              <xsl:otherwise>No</xsl:otherwise>
            </xsl:choose>
          </div>
          <div>Ignore indentation:

            <xsl:choose>
              <xsl:when test="IGNORE_INDENTATION = 'X'">Yes</xsl:when>
              <xsl:otherwise>No</xsl:otherwise>
            </xsl:choose>
          </div>
        </div>
        <h2>Table of contents</h2>
        <div class="toc">
          <div class="toc-child">
            <ul>
              <xsl:for-each select="PARTS/ZTIMEM_PART_SOURCE">
                <li>
                  <a>
                    <xsl:attribute name="href">
                      <xsl:text>#</xsl:text>
                      <xsl:value-of select="NAME"/>
                    </xsl:attribute>
                    <xsl:value-of select="NAME"/>
                  </a>
                </li>
              </xsl:for-each>
            </ul>
          </div>
          <div class="toc-child">
            <ul>
              <li>
                <a>
                  <xsl:attribute name="href">#contributors</xsl:attribute>
                  Contributors
                </a>
              </li>
              <li>
                <a>
                  <xsl:attribute name="href">#requests</xsl:attribute>
                  Requests
                </a>
              </li>
              <xsl:for-each select="AGGREGATED_FIELDS/ZTIMEM_AGGREGATED_FIELD[starts-with(FIELDNAME, 'CUSTOM') and count(LINES/ZTIMEM_AGGREGATED_LINE)&gt;0]">
                <li>
                  <a>
                    <xsl:attribute name="href">#aggregated_<xsl:value-of select="FIELDNAME"/></xsl:attribute>
                    <xsl:value-of select="TITLE"/> list
                  </a>
                </li>
              </xsl:for-each>
              <li>
                <a>
                  <xsl:attribute name="href">#stats</xsl:attribute>
                  Statistics
                </a>
              </li>
            </ul>
          </div>
        </div>
        <xsl:for-each select="PARTS/ZTIMEM_PART_SOURCE">
          <h2 class="blame">
            <a>
              <xsl:attribute name="name">
                <xsl:value-of select="NAME"/>
              </xsl:attribute>
              <xsl:value-of select="NAME"/>
            </a>
          </h2>
          <table class="blame">
            <THEAD class="header">
              <TR>
                <TH class="num">V</TH>
                <TH>Author</TH>
                <TH>Date</TH>
                <TH>Request</TH>
                <TH>Task</TH>
                <TH>
                  <xsl:if test="../../CUSTOM1_TITLE = ''">
                    <xsl:attribute name="class">hide</xsl:attribute>
                  </xsl:if>
                  <xsl:value-of select="../../CUSTOM1_TITLE"/>
                </TH>
                <TH>
                  <xsl:if test="../../CUSTOM2_TITLE = ''">
                    <xsl:attribute name="class">hide</xsl:attribute>
                  </xsl:if>
                  <xsl:value-of select="../../CUSTOM2_TITLE"/>
                </TH>
                <TH>
                  <xsl:if test="../../CUSTOM3_TITLE = ''">
                    <xsl:attribute name="class">hide</xsl:attribute>
                  </xsl:if>
                  <xsl:value-of select="../../CUSTOM3_TITLE"/>
                </TH>
                <TH class="num">Line</TH>
                <TH>
                  <a>
                    <xsl:attribute name="href">SAPEVENT:source?


                      <xsl:value-of select="TYPE"/>


                      |


                      <xsl:value-of select="OBJECT_NAME"/>
                    </xsl:attribute>


                    Source


                  </a>
                </TH>
              </TR>
            </THEAD>
            <xsl:for-each select="LINES/ZTIMEM_LINE">
              <TR>
                <xsl:if test="REQUEST != ''">
                  <xsl:attribute name="class">versionfirstrow</xsl:attribute>
                </xsl:if>
                <TD class="num">
                  <xsl:choose>
                    <xsl:when test="VERSION_NUMBER = 99999">MODIFIED</xsl:when>
                    <xsl:when test="VERSION_NUMBER = 99998">ACTIVE</xsl:when>
                    <xsl:when test="VERSION_NUMBER &gt; 0">
                      <xsl:value-of select="number(VERSION_NUMBER)"/>
                    </xsl:when>
                  </xsl:choose>
                </TD>
                <TD>
                  <xsl:value-of select="AUTHOR"/>
                </TD>
                <TD>
                  <xsl:if test="TIME != '00:00:00'">
                    <a>
                      <xsl:attribute name="title">Show versions only until
                        <xsl:value-of select="DATE"/>
                        &amp;nbsp;
                        <xsl:value-of select="TIME"/>
                      </xsl:attribute>
                      <xsl:attribute name="href">SAPEVENT:timestamp?
                        <xsl:value-of select="TIMESTAMP"/>
                      </xsl:attribute>
                      <xsl:value-of select="DATE"/>

                      &amp;nbsp;

                      <xsl:value-of select="TIME"/>
                    </a>
                  </xsl:if>
                </TD>
                <TD>
                  <xsl:choose>
                    <xsl:when test="REQUEST != ''">
                      <a>
                        <xsl:attribute name="title">Jump to request&amp;nbsp;
                          <xsl:value-of select="REQUEST"/>
                        </xsl:attribute>
                        <xsl:attribute name="href">SAPEVENT:request?
                          <xsl:value-of select="REQUEST"/>
                        </xsl:attribute>
                        <xsl:value-of select="REQUEST"/>
                      </a>
                    </xsl:when>
                    <xsl:otherwise>
                      <xsl:value-of select="REQUEST"/>
                    </xsl:otherwise>
                  </xsl:choose>
                </TD>
                <TD>
                  <xsl:value-of select="TASK"/>
                </TD>
                <TD>
                  <xsl:if test="../../../../CUSTOM1_TITLE = ''">
                    <xsl:attribute name="class">hide</xsl:attribute>
                  </xsl:if>
                  <xsl:value-of select="CUSTOM1"/>
                </TD>
                <TD>
                  <xsl:if test="../../../../CUSTOM2_TITLE = ''">
                    <xsl:attribute name="class">hide</xsl:attribute>
                  </xsl:if>
                  <xsl:value-of select="CUSTOM2"/>
                </TD>
                <TD>
                  <xsl:if test="../../../../CUSTOM3_TITLE = ''">
                    <xsl:attribute name="class">hide</xsl:attribute>
                  </xsl:if>
                  <xsl:value-of select="CUSTOM3"/>
                </TD>
                <TD class="num">
                  <xsl:value-of select="number(LINE_NUM)"/>
                </TD>
                <TD class="code">
                  <PRE>
                    <xsl:value-of select="SOURCE"/>
                  </PRE>
                </TD>
              </TR>
            </xsl:for-each>
          </table>
        </xsl:for-each>

        <h2 class="aggregated">
          <a>
            <xsl:attribute name="name">contributors</xsl:attribute>

            Contributors

          </a>
        </h2>
        <table class="aggregated">
          <THEAD class="header">
            <tr>
              <th>Username</th>
              <th>Name</th>
              <th class="num">Lines</th>
              <th class="num">Percentage</th>
              <th class="num">Requests</th>
            </tr>
          </THEAD>
          <xsl:for-each select="AGGREGATED_FIELDS/ZTIMEM_AGGREGATED_FIELD[FIELDNAME='AUTHOR']/LINES/ZTIMEM_AGGREGATED_LINE">
            <xsl:sort order="descending" select="PERCENTAGE"/>
            <tr>
              <td>
                <a>
                  <xsl:attribute name="href">SAPEVENT:author?
                    <xsl:value-of select="VALUE"/>
                  </xsl:attribute>
                  <xsl:value-of select="VALUE"/>
                </a>
              </td>
              <td>
                <xsl:value-of select="DESCRIPTION"/>
              </td>
              <td class="num">
                <xsl:value-of select="number(LINE_COUNT)"/>
              </td>
              <td class="num">
                <xsl:value-of select="format-number(PERCENTAGE, '#%')"/>
              </td>
              <td class="num">
                <xsl:value-of select="number(REQUEST_COUNT)"/>
              </td>
            </tr>
          </xsl:for-each>
        </table>

        <h2 class="aggregated">
          <a>
            <xsl:attribute name="name">requests</xsl:attribute>
            Requests
          </a>
        </h2>
        <table class="aggregated">
          <THEAD class="header">
            <tr>
              <th>Request</th>
              <th>Description</th>
              <th class="num">Lines</th>
              <th class="num">Percentage</th>
            </tr>
          </THEAD>
          <xsl:for-each select="AGGREGATED_FIELDS/ZTIMEM_AGGREGATED_FIELD[FIELDNAME='REQUEST']/LINES/ZTIMEM_AGGREGATED_LINE">
            <xsl:sort order="descending" select="PERCENTAGE"/>
            <tr>
              <td>
                <a>
                  <xsl:attribute name="title">Jump to request&amp;nbsp;
                    <xsl:value-of select="VALUE"/>
                  </xsl:attribute>
                  <xsl:attribute name="href">SAPEVENT:request?
                    <xsl:value-of select="VALUE"/>
                  </xsl:attribute>
                  <xsl:value-of select="VALUE"/>
                </a>
              </td>
              <td>
                <xsl:value-of select="DESCRIPTION"/>
              </td>
              <td class="num">
                <xsl:value-of select="number(LINE_COUNT)"/>
              </td>
              <td class="num">
                <xsl:value-of select="format-number(PERCENTAGE, '#%')"/>
              </td>
            </tr>
          </xsl:for-each>
        </table>

        <xsl:for-each select="AGGREGATED_FIELDS/ZTIMEM_AGGREGATED_FIELD[starts-with(FIELDNAME, 'CUSTOM') and count(LINES/ZTIMEM_AGGREGATED_LINE)&gt;0]">
          <h2 class="aggregated">
            <a>
              <xsl:attribute name="name">aggregated_<xsl:value-of select="FIELDNAME"/></xsl:attribute>
              <xsl:value-of select="TITLE"/> list
            </a>
          </h2>
          <table class="aggregated">
            <THEAD class="header">
              <tr>
                <th>
                  <xsl:value-of select="TITLE"/>
                </th>
                <th class="num">Lines</th>
                <th class="num">Percentage</th>
                <th class="num">Requests</th>
              </tr>
            </THEAD>
            <xsl:for-each select="LINES/ZTIMEM_AGGREGATED_LINE">
              <xsl:sort order="descending" select="PERCENTAGE"/>
              <tr>
                <td>
                  <xsl:value-of select="VALUE"/>
                </td>
                <td class="num">
                  <xsl:value-of select="number(LINE_COUNT)"/>
                </td>
                <td class="num">
                  <xsl:value-of select="format-number(PERCENTAGE, '#%')"/>
                </td>
                <td class="num">
                  <xsl:value-of select="number(REQUEST_COUNT)"/>
                </td>
              </tr>
            </xsl:for-each>
          </table>
        </xsl:for-each>

        <h2 class="stats">
          <a>
            <xsl:attribute name="name">stats</xsl:attribute>

            Statistics

          </a>
        </h2>
        <xsl:for-each select="STATS">
          <table>
            <tr>
              <td>Total lines:</td>
              <td>
                <xsl:value-of select="TOTAL_LINES"/>
              </td>
            </tr>
            <tr>
              <td>SLOC:</td>
              <td>
                <xsl:value-of select="TOTAL_LINES - COMMENT_LINES - EMPTY_LINES"/>
                <xsl:text> </xsl:text>
                <xsl:text>(</xsl:text>
                <xsl:value-of select="format-number(1 - ( COMMENT_LINES + EMPTY_LINES ) div TOTAL_LINES, '#%')"/>
                <xsl:text>)</xsl:text>
              </td>
            </tr>
            <tr>
              <td>Comment lines:</td>
              <td>
                <xsl:value-of select="COMMENT_LINES"/>
                <xsl:text> </xsl:text>
                <xsl:text>(</xsl:text>
                <xsl:value-of select="format-number(COMMENT_LINES div TOTAL_LINES, '#%')"/>
                <xsl:text>)</xsl:text>
              </td>
            </tr>
            <tr>
              <td>Empty lines:</td>
              <td>
                <xsl:value-of select="EMPTY_LINES"/>
                <xsl:text> </xsl:text>
                <xsl:text>(</xsl:text>
                <xsl:value-of select="format-number(EMPTY_LINES div TOTAL_LINES, '#%')"/>
                <xsl:text>)</xsl:text>
              </td>
            </tr>
            <tr>
              <td>Activity interval:</td>
              <td>
                <xsl:value-of select="DATE_OLDEST"/>
                <xsl:text> to </xsl:text>
                <xsl:value-of select="DATE_LATEST"/>
              </td>
            </tr>
          </table>
        </xsl:for-each>

        <div id="footer">
          <div>&amp;nbsp;</div>
          <div class="footer_text">
            <xsl:value-of select="FOOTER_TEXT"/>
          </div>
          <div>&amp;nbsp;</div>

          Version

          <xsl:text> </xsl:text>
          <xsl:value-of select="VERSION"/>
        </div>
      </body>
    </html>
  </xsl:template>
</xsl:transform>
